	<script type="text/javascript">
	$(document).ready(function(){
		
		$("#changeComm").click(function(){
			alert("버튼 눌림~!");
			$("#hc_tanda").val();
		});
	});
	function oneCheckbox(a){
        var obj = document.getElementsByName("comm");
        for(var i=0; i<obj.length; i++){
            if(obj[i] != a){
                obj[i].checked = false;
            }
        }
    }
	</script>
